{% extends "base.jinja" %}
{% block content %}
    <article>
        <div id="meta">
            <div id="heading">
                <a id="home" href="./">
                    <svg width="24" height="24" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10.295 19.716a1 1 0 0 0 1.404-1.425l-5.37-5.29h13.67a1 1 0 1 0 0-2H6.336L11.7 5.714a1 1 0 0 0-1.404-1.424l-6.924 6.822a1.25 1.25 0 0 0 0 1.78l6.924 6.823Z"
                              fill="#444444"></path>
                    </svg>
                </a>
                <h1>{{ title }}</h1>
            </div>
            <div id="sub-heading">
                <p>{{ servings }}</p>
                <p>
                    Adapted from <a href="{{ source.link }}" target="_blank"
                                    rel="noopener noreferrer">{{ source.name }}</a>
                </p>
            </div>
        </div>
        {% for id, section in sections %}
            <section id="{{ id }}">
                {{ section }}
            </section>
        {% endfor %}

    </article>
{% endblock %}

